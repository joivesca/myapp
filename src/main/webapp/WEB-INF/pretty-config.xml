	<url-mapping id="securedHome">
		<pattern value="/secured/home" />
		<view-id value="/views/secured/home.xhtml" />
	</url-mapping>
	
	<url-mapping id="error500">
        <pattern value="/error/500" />
        <view-id value="/views/error/500.xhtml" />
    </url-mapping>
	
	
</pretty-config>